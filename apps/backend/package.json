{
  "name": "@lms/backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "nest start --watch",
    "build": "prisma generate --schema=../../packages/database/prisma/schema.prisma && nest build",
